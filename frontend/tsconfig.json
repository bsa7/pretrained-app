{
  "compilerOptions": {
    "allowJs": true,
    "allowSyntheticDefaultImports": true,
    "baseUrl": ".",
    "esModuleInterop": true,
    "isolatedModules": true,
    "lib": ["ES2020", "dom"],
    "module": "ES2020",
    "moduleResolution": "node",
    "noEmit": true,
    "paths": {
      "@/*": ["src/*"],
      "*": ["node_modules/*", "src/*"]
    },
    "sourceMap": true,
    "strict": true,
    "target": "ES2020",
    "types": [
      "react-native",
      "jest"
    ]
  },
  "exclude": [
    "**/*.spec.ts",
    "node_modules",
    "babel.config.js",
    "metro.config.js",
    "jest.config.js"
  ],
  "extends": "expo/tsconfig.base"
}
